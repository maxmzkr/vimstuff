#include <sys/types.h>
#include <unistd.h>
#include "./vm_app.h"

int main() {
  char *share_p = reinterpret_cast<char *>(vm_extend(1));
  share_p[0] = 'a';

  pid_t pid = fork();
  if (pid == 0) {
    sleep(2);
    share_p[0] = 'b';
    char * p = reinterpret_cast<char *>(vm_extend(0));
    p[0] = 'c';
  } else {
    char * p = reinterpret_cast<char *>(vm_extend(0));
    p[0] = 'a';
    p = reinterpret_cast<char *>(vm_extend(0));
    p[0] = 'a';
  }
}

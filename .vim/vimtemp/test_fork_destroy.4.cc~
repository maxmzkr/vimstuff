#include <sys/types.h>
#include <unistd.h>
#include "./vm_app.h"

int main() {
  char * p = reinterpret_cast<char *>(vm_extend(1));
  p[0] = 'a';

  pid_t pid = fork();
  if (pid == 0) {
    pid_t pid = fork();
    if (pid == 0) {
      vm_syslog(p, 1);
      return 0;
    } else {
      vm_syslog(p, 1);
      p = reinterpret_cast<char *>(vm_extend(1));
      vm_syslog(p, 1);
      return 0;
    }
  } else {
    vm_syslog(p, 1);
    return 0;
  }
}

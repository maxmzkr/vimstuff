#ifndef EDGE_H_
#define EDGE_H_

#include <cmath>
#include "./node.h"

class Node;

double get_length(int x1, int x2, int y1, int y2);

double get_length(Node * node1, Node * node2);

class Edge {
 public:
	void set_node1(Node * node1);

	void set_node2(Node * node2);

	void set_used(bool used);

	Node * node1();

	Node * node2();

	bool used();

	double length();

	int other_node(int node_id);

	void print();

 private:
	void set_length_();

	Node * node1_ = nullptr;
	Node * node2_ = nullptr;
	double length_ = 0;
	bool used_ = false;
};

bool edge_compare(Edge * edge1, Edge * edge2);

#endif  // EDGE_H_

package homehandler

import (
  "html/template"
  "net/http"

  "github.com/maxmzkr/handlers"
  "github.com/maxmzkr/thegoodpear/handlers/topbarhandler"
)

type Page struct {
  Title string
  Content template.HTML
}

type Home struct {
  Page
  topbarhandler.Topbar
}


func HomeHandler(writer http.ResponseWriter, request *http.Request) {
  page := Page{Title: "home"}
  topbar := Topbar{Words: "words"}
  home := Home{page, topbar}

  handlers.ExecuteInGlobal(writer, "home", &home)
}

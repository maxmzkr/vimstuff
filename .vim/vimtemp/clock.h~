#ifndef CLOCK_H_
#define CLOCK_H_

#include <list>
#include "./page_information_entry.h"

class clock {
 public:
  static void init();

  // Adds a page into the clock and memory
  // Evicts if there is no more room in memory
  static void place(Pie* place_pie);

  // Deletes the pie from the clock
  static void erase(Pie* erase_pie);

 private:
  // data members
  static std::list<Pie*>::iterator clock_hand_;
  static std::list<Pie*> clock_queue_;

  // funcions
  static bool evict();
  static void free_hand();
};

#endif  // CLOCK_H_

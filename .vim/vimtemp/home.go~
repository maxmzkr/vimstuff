package handlers

import (
  "html/template"
  "net/http"
  "github.com/maxmzkr/handlers"
)

type Page struct {
  Title string
  Content template.HTML
}

type Home struct {
  Page
}


func HomeHandler(writer http.ResponseWriter, request *http.Request) {
  page := Page{Title: "home"}
  home := Home{page}

  handlers.ExecuteInGlobal(writer, "home", &home)
}

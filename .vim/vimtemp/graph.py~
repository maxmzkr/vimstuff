import networkx as nx

def main():
    my_graph = nx.DiGraph()
    my_graph.add_node("INIT", color="GREEN", fillcolor="GREEN", style="filled")
    my_graph.add_node("REF_NO_TOUCH", color="RED", fillcolor="RED", style="filled")
    my_graph.add_node("NO_REF_NO_TOUCH", color="RED", fillcolor="RED", style="filled")
    my_graph.add_node("DIRTY", color="GREEN", fillcolor="GREEN", style="filled")
    my_graph.add_node("NO_REF_DIRTY", color="GREEN", fillcolor="RED", style="filled")
    my_graph.add_node("EVICT", color="GREEN", fillcolor="GREEN", style="filled")
    my_graph.add_node("REF", color="RED", fillcolor="RED", style="filled")
    my_graph.add_node("NO_REF", color="GREEN", fillcolor="GREEN", style="filled")

    my_graph.add_edge("INIT", "REF_NO_TOUCH", label="R", color="GREEN")
    my_graph.add_edge("INIT", "DIRTY", label="W", color="GREEN")
    my_graph.add_edge("REF_NO_TOUCH", "NO_REF_NO_TOUCH", label="clock", color="GREEN")
    my_graph.add_edge("REF_NO_TOUCH", "DIRTY", label="W", color="GREEN")
    my_graph.add_edge("NO_REF_NO_TOUCH", "INIT", label="EVICT", color="GREEN")
    my_graph.add_edge("NO_REF_NO_TOUCH", "DIRTY", label="W", color="GREEN")
    my_graph.add_edge("NO_REF_NO_TOUCH", "NO_TOUCH", label="R", color="GREEN")
    my_graph.add_edge("DIRTY", "NO_REF_DIRTY", label="clock", color="GREEN")
    my_graph.add_edge("REF", "NO_REF", label="clock", color="GREEN")
    my_graph.add_edge("REF", "DIRTY", label="W", color="GREEN")
    my_graph.add_edge("NO_REF_DIRTY", "DIRTY", label="R/W", color="GREEN")
    my_graph.add_edge("NO_REF_DIRTY", "EVICT", label="EVICT", color="GREEN")
    my_graph.add_edge("NO_REF", "DIRTY", label="W", color="GREEN")
    my_graph.add_edge("NO_REF", "REF", label="R", color="GREEN")
    my_graph.add_edge("NO_REF", "EVICT", label="EVICT", color="GREEN")
    my_graph.add_edge("EVICT", "REF", label="R", color="GREEN")
    my_graph.add_edge("EVICT", "DIRTY", label="W", color="GREEN")

    nx.write_dot(my_graph, "graph.dot")

if __name__ == "__main__":
    main()
